import java.util.*;

class Main{

	
	static int result =0;
	public int DFS(int n, int r) {
		if(r==1) {
			return n;
		}
		else if(n == r){
			return 1;
		}
		else {
			return DFS(n-1, r-1) + DFS(n-1, r);
		}
		
	}
	
	public static void main(String[] args) {
		Main T = new Main();
		Scanner scanner =  new Scanner (System.in);
		
		int n = scanner.nextInt();
		int r = scanner.nextInt();
		
		System.out.println(T.DFS(n, r));
	}
}
